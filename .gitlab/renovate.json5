{
  "enabled": true,
  "semanticCommits": "disabled",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "ignoreTests": true,
  "ignoreDeps": [
    "docker.io/calico/cni",
    "docker.io/calico/kube-controllers",
    "docker.io/calico/pod2daemon-flexvol",
    "docker.io/calico/node",
    "ghcr.io/fluxcd/helm-controller",
    "ghcr.io/fluxcd/image-automation-controller",
    "ghcr.io/fluxcd/image-reflector-controller",
    "ghcr.io/fluxcd/kustomize-controller",
    "ghcr.io/fluxcd/notification-controller",
    "ghcr.io/fluxcd/source-controller"
  ],
  "flux": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": [
      "cluster/.+\\.ya?ml$",
    ]
  },
  "packageRules": [
    // setup datasources
    {
      "matchDatasources": ["helm"],
      "separateMinorPatch": true,
      "ignoreDeprecated": true,
      "commitMessageTopic": "chart {{depName}}"
    },
    // global docker datasource settings
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "commitMessageTopic": "image {{depName}}"
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "commitMessageTopic": "{{{depName}}}{{#if currentValue}}:{{{currentValue}}}{{/if}} digest"
    },
    // add labels according to package and update types
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dep::major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["dep::minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["dep::patch"]
    },
    {
      "matchUpdateTypes": ["digest"],
      "labels": ["dep::digest"]
    },
    {
      "matchDatasources": ["docker"],
      "addLabels": ["renovate::container"]
    },
    {
      "matchDatasources": ["helm"],
      "addLabels": ["renovate::helm"]
    },
    // enable automerge on < minor
    {
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true
    },
    // Including minor for specific dependencies
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/renovatebot/renovate",
        "ghcr.io/vaskozl/kubeconform",
        "ghcr.io/vaskozl/cyberchef-web",
        "ghcr.io/vaskozl/homer-web",
      ],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    }
  ]
}
